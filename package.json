{
	"name": "runes-webkit-starter",
	"version": "0.4.24",
	"description": "A collection of reusable Svelte components for building  user interfaces for Runes.",
	"license": "MIT",
	"homepage": "https://runes-webkit-starter.codewithshin.com/",
	"author": {
		"name": "Shinichi Okada",
		"email": "connect@codewithshin.com",
		"url": "https://codewithshin.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/shinokada/runes-webkit-starter"
	},
	"bugs": "https://github.com/shinokada/runes-webkit-starter/issues",
	"type": "module",
	"keywords": [
		"svelte",
		"runes",
		"sveltekit",
		"ui"
	],
	"contributors": [
		{
			"name": "shinokada/runes-webkit-starter",
			"url": "https://github.com/shinokada/runes-webkit-starter"
		}
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"gen:exports": "svelte-lib-helpers exports",
		"copy:packagejson": "svelte-lib-helpers package",
		"gen:docs5FromType": "svelte-lib-helpers docs5FromType",
		"lib-helpers": "pnpm format && pnpm gen:docs5FromType && pnpm gen:exports && pnpm copy:packagejson",
		"ch": "npx changeset",
		"cv": "npx changeset version",
		"cp": "npx changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.4",
		"@eslint/compat": "^1.2.9",
		"@eslint/js": "^9.27.0",
		"@playwright/test": "^1.52.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@tailwindcss/vite": "^4.1.8",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"eslint": "^9.27.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.0",
		"globals": "^16.2.0",
		"highlight.js": "^11.11.1",
		"jsdom": "^26.1.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"runatics": "^0.1.4",
		"runes-meta-tags": "^0.4.3",
		"runes-webkit": "^0.9.58",
		"svelte": "^5.33.6",
		"svelte-5-ui-lib": "^0.12.6",
		"svelte-check": "^4.2.1",
		"svelte-lib-helpers": "^0.4.30",
		"svelte-rune-highlight": "^0.5.15",
		"svelte-shields": "^0.5.1",
		"tailwind-merge": "^3.3.0",
		"tailwindcss": "^4.1.8",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.0",
		"vite": "^6.3.5",
		"vitest": "^3.1.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
