{
	"name": "runes-webkit-starter",
	"version": "0.4.24",
	"description": "A collection of reusable Svelte components for building  user interfaces for Runes.",
	"license": "MIT",
	"homepage": "https://runes-webkit-starter.codewithshin.com/",
	"author": {
		"name": "Shinichi Okada",
		"email": "connect@codewithshin.com",
		"url": "https://codewithshin.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/shinokada/runes-webkit-starter"
	},
	"bugs": "https://github.com/shinokada/runes-webkit-starter/issues",
	"type": "module",
	"keywords": [
		"svelte",
		"runes",
		"sveltekit",
		"ui"
	],
	"contributors": [
		{
			"name": "shinokada/runes-webkit-starter",
			"url": "https://github.com/shinokada/runes-webkit-starter"
		}
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"gen:exports": "svelte-lib-helpers exports",
		"copy:packagejson": "svelte-lib-helpers package",
		"gen:docs5FromType": "svelte-lib-helpers docs5FromType",
		"lib-helpers": "pnpm format && pnpm gen:docs5FromType && pnpm gen:exports && pnpm copy:packagejson",
		"ch": "npx changeset",
		"cv": "npx changeset version",
		"cp": "npx changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.58.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"clsx": "^2.1.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"flowbite-svelte": "^1.31.0",
		"globals": "^16.5.0",
		"highlight.js": "^11.11.1",
		"jsdom": "^27.4.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"runatics": "^0.2.0",
		"runes-meta-tags": "^0.5.0",
		"runes-webkit": "^0.12.1",
		"svelte": "^5.49.0",
		"svelte-check": "^4.3.5",
		"svelte-lib-helpers": "^0.4.31",
		"svelte-rune-highlight": "^0.12.1",
		"svelte-shields": "^0.5.4",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.18"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
